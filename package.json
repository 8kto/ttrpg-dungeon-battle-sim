{
  "name": "ttrpg-snw-generator",
  "description": "A tabletop RPG inventory generator for Swords & Wizardry.",
  "version": "0.1.1",
  "author": "8kto <ifhtagn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wmr --reload",
    "dev-all": "concurrently \"yarn dev\" \"yarn watch\"",
    "build:styles": "./scripts/build-styles.sh",
    "build": "yarn build:styles && wmr build --sourcemap --minify",
    "serve": "wmr serve",
    "deploy": "scripts/deploy.sh",
    "dev:old": "npx live-server src --port=3000 --no-browser",
    "format": "prettier . --check",
    "format:fix": "yarn eslint --fix && prettier --write .",
    "lint": "yarn eslint src/",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "todos": "egrep --color=always -i '(TODO|FIXME)' -r src/",
    "test:vr": "backstop test",
    "weok": "yarn tsc && yarn lint && yarn format && yarn test && echo WE OK",
    "watch": "npm-watch",
    "styles:main": "npx tailwindcss -i src/styles/styles.scss -o src/styles/styles.processed.css -c tailwind.config.js",
    "styles:character": "npx tailwindcss -i src/styles/character-sheet.scss -o src/styles/character-sheet.processed.css -c tailwind.config.js"
  },
  "watch": {
    "styles:main": {
      "patterns": [
        "styles/styles.scss"
      ],
      "extensions": "scss",
      "runOnStart": true
    },
    "styles:character": {
      "patterns": [
        "styles/character-sheet.scss"
      ],
      "extensions": "scss",
      "runOnStart": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "babel-jest": "^29.7.0",
    "backstopjs": "^6.3.23",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-watch": "^0.13.0",
    "pdf-lib": "^1.17.1",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5"
  },
  "dependencies": {
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "wmr": "^3.8.0"
  }
}
