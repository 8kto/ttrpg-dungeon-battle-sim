{
  "name": "ttrpg-snw-generator",
  "description": "A tabletop RPG inventory generator for Swords & Wizardry.",
  "version": "0.1.0",
  "author": "8kto <ifhtagn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wmr --reload",
    "build:styles": "npx tailwindcss -i ./src/styles/styles.css -o ./src/styles/styles.processed.css",
    "build": "yarn build:styles && wmr build --sourcemap --minify",
    "serve": "wmr serve",
    "deploy": "scripts/deploy.sh",
    "dev:old": "npx live-server src --port=3000 --no-browser",
    "format": "prettier . --check",
    "format:fix": "yarn eslint --fix && prettier --write .",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "dev:styles": "npx tailwindcss -i ./src/styles/styles.css -o ./src/styles/styles.processed.css --watch",
    "todos": "egrep --color=always -i '(TODO|FIXME)' -r src/",
    "test:vr": "backstop test",
    "weok": "yarn tsc && yarn lint && yarn format && yarn test && echo WE OK"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "babel-jest": "^29.7.0",
    "backstopjs": "^6.3.23",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5"
  },
  "dependencies": {
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "wmr": "^3.8.0"
  }
}
